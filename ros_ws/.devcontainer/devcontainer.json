{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "nano",
  "build": {
      "dockerfile": "Dockerfile",
      "args": {
          "USERNAME": "nano"
      }
  },
  "workspaceFolder": "/home/ros_ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros_ws,type=bind",
  "customizations": {
      "vscode": {
          "extensions":[
              "ms-vscode.cpptools",
              "ms-vscode.cpptools-themes",
              "twxs.cmake",
              "donjayamanne.python-extension-pack",
              "eamodio.gitlens",
              "ms-iot.vscode-ros"
          ]
      }
  },
  "containerEnv": {
      "DISPLAY": "unix:0",
      "ROS_LOCALHOST_ONLY": "1",
      "ROS_DOMAIN_ID": "42"
  },
  "runArgs": [
      "--net=host",
      "--pid=host",
      "--ipc=host",
      "--runtime=nvidia",
      "--gpus=all",
      "-e", "DISPLAY=${env:DISPLAY}"
  ],
  "mounts": [
     "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
  ],
  "postCreateCommand": "sudo rosdep init && sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R $(whoami) /home/ros_ws/"
}