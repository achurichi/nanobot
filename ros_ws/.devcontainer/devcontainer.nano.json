{
	"name": "ROS 2 Jetson Nano Development Container",
	"privileged": true,
	"remoteUser": "nano",
	"build": {
		"dockerfile": "Dockerfile.nano",
		"args": {
			"USERNAME": "nano"
		}
	},
	"workspaceFolder": "/home/ros_ws",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/ros_ws,type=bind",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes",
				"twxs.cmake",
				"donjayamanne.python-extension-pack",
				"eamodio.gitlens",
				"ms-iot.vscode-ros"
			]
		}
	},
	"containerEnv": {
		"DISPLAY": "unix:0"
	},
	"runArgs": [
		"--net=host",
		"--pid=host",
		"--ipc=host",
    "--device=/dev/serial/by-id/",
		"--runtime=nvidia",
		"--gpus", "all",
    "-e", "NVIDIA_DRIVER_CAPABILITIES=all",
		"-e", "DISPLAY=${env:DISPLAY}"
	],
	"mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev/serial/by-id,target=/dev/serial/by-id,type=bind"
	],
	"postCreateCommand": "sudo chown -R $(whoami) /home/ros_ws/"
}
